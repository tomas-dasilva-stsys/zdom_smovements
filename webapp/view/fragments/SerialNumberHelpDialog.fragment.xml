<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <ValueHelpDialog
        title="{i18n>serialNumberSelection}"
        ok=".onValueHelpOkPress"
        cancel=".onExitDialog"
        key="SerialNumber"
        descriptionKey="Name"
    >
        <filterBar>
            <fb:FilterBar search="onFilterBarSearch">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="SerialNumber"
                        label="{i18n>serialNumber}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input
                                name="SerialNumber"
                                submit="onSubmitFilter"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="ProductionOrder"
                        label="{i18n>productionOrder}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input
                                name="ProductionOrder"
                                submit="onSubmitFilter"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
