<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <ValueHelpDialog
        title="{i18n>costcenter}"
        ok=".onValueHelpOkPress"
        cancel=".onExitDialog"
        key="CostCenter"
        descriptionKey="Name"
        supportMultiselect="false"
    >
        <filterBar>
            <fb:FilterBar search="onFilterBarSearch">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="costcenter"
                        label="{i18n>costcenter}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="costcenter" submit="onSubmitFilter"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="plant"
                        label="{i18n>plant}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="plant" submit="onSubmitFilter"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="workcenter"
                        label="{i18n>workcenter}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="workcenter" submit="onSubmitFilter"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
