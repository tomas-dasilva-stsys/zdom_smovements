<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <ValueHelpDialog
        title="{i18n>materialSelection}"
        ok=".onValueHelpOkPress"
        cancel=".onExitDialog"
        key="MaterialNumber"
        descriptionKey="Name"
    >
        <filterBar>
            <fb:FilterBar search="onFilterBarSearch">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="MaterialNumber"
                        label="{i18n>material}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="MaterialNumber" submit="onSubmitFilter"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="Description"
                        label="{i18n>description}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input name="Description" submit="onSubmitFilter"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
