<core:FragmentDefinition
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idDialog"
        title="{i18n>massFillTitle}"
        class="sapUiResponsiveContentPadding"
        afterOpen="onDialogAfterOpen"
        afterClose="onDialogAfterClose"
        contentWidth="32%"
    >
        <Label
            text="{i18n>serialNumbers}"
            visible="{AppJsonModel>/Visible/ReferenceNumberVisible}"
        />

        <FlexBox
            id="ReferenceNumbersFb"
            direction="Row"
            wrap="Wrap"
            class="sapUiSmallMarginBottom"
            visible="{AppJsonModel>/Visible/ReferenceNumberVisible}"
        />

        <Label
            id="idMovementReason"
            text="{i18n>movementReason}"
            required="true"
        />
        <Input
            id="MassFill-Reason"
            valueHelpRequest="onValueHelpMassFillRequest"
            valueStateText="{i18n>reasonRequired}"
            showValueHelp="true"
            required="true"
            liveChange="onInputMassFillLiveChange"
        />
        <Label
            id="idCostCenter"
            text="{i18n>costcenter}"
            required="true"
            class="sapUiSmallMarginTop"
        />
        <Input
            id="MassFill-CostCenter"
            valueHelpRequest="onValueHelpMassFillRequest"
            valueStateText="{i18n>costCenterRequired}"
            showValueHelp="true"
            required="true"
            liveChange="onInputMassFillLiveChange"
            class="sapUiSmallMarginBottom"
        />
        <VBox
            direction="Row"
            justifyContent="End"
        >
            <Button
                id="dialogStockTransferBtn"
                text="{i18n>confirmBtn}"
                type="Emphasized"
                press="onConfirmMassFillAction"
            />
            <Button
                id="dialogStockTransferCancelBtn"
                class="sapUiTinyMarginBegin"
                type="Reject"
                text="{i18n>cancelBtn}"
                press="onExitDialog"
            />
        </VBox>
    </Dialog>
</core:FragmentDefinition>
