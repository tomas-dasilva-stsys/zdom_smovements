<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
    xmlns="sap.ui.comp.valuehelpdialog"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <ValueHelpDialog
        title="{i18n>workcenterSelection}"
        ok=".onValueHelpOkPress"
        cancel=".onExitDialog"
        key="WorkCenter"
        descriptionKey="Name"
    >
        <filterBar>
            <fb:FilterBar search="onFilterBarSearch">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="WorkCenter"
                        label="{i18n>workcenter}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input
                                name="WorkCenter"
                                submit="onSubmitFilter"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="Plant"
                        label="{i18n>plant}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input
                                name="Plant"
                                submit="onSubmitFilter"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        groupName="__$INTERNAL$"
                        name="Description"
                        label="{i18n>description}"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <m:Input
                                name="Description"
                                submit="onSubmitFilter"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </filterBar>
    </ValueHelpDialog>
</core:FragmentDefinition>
